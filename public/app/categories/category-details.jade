.container
    .row.text-center 
        h1 {{title}}
    .row
        .col-md-4
            form.navbar-form(role="search")
            .input-group
                input.form-control(type="text" placeholder="Search" name="q" ng-model="query" ng-keyup="$event.keyCode == 13 && findItem(query)")
                .input-group-btn
                    button.btn.btn-default(ng-click="findItems()")
                        i.glyphicon.glyphicon-search

        .col-md-4
            form.navbar-form(role="search")

                select.form-control(ng-model="orderBy" ng-change="findItems()")
                    option(value="-published" ng-select="") Newest
                    option(value="published") Oldest
                    option(value="price") Low price
                    option(value="-price") High price
                    option(value="title") Title
         .col-md-4.text-right
            a.btn.btn-success.btn-lg(href="#/items/create") Add offer
        
    br
    .row
    
        .col-md-3
          .list-group
            a.list-group-item(href="#/categories/{{category.name}}" ng-repeat="category in categories | orderBy: 'name'") {{category.name}}

        .col-md-9
            div(data-pagination="" data-num-pages="numPages()" data-current-page="currentPage" data-max-size="maxSize" data-boundary-links="true")
            div(items-grid items="items")
            div(data-pagination="" data-num-pages="numPages()" data-current-page="currentPage" data-max-size="maxSize" data-boundary-links="true")