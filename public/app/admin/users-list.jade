.container-fluid()
    .row
        .col-md-3
            div(ng-include="'partials/admin/admin-panel-navigation'")
        .col-md-9
            table.table
                h3 Users
                hr
                .row
                    tr(ng-repeat="user in users")
                        td {{ user.firstName }}
                        td {{ user.lastName }}
                        td
                            .btn-group
                                a.btn.btn-primary(href="#/users/{{user._id}}")
                                    i.fa.fa-user.fa-fw
                                    | User
                                    a.btn.btn-primary(dropdown-toggle data-toggle="dropdown")
                                        span.fa.fa-caret-down
                                ul.dropdown-menu
                                    li
                                        a(href="#/users/{{user._id}}/edit")
                                            i.fa.fa-pencil.fa-fw
                                            |  Edit
                                    li
                                        a(href="" ng-click='deleteUser(user._id)')
                                            i.fa.fa-trash-o.fa-fw
                                            |  Delete
                                    li.divider
                                    li
                                        a(href="" ng-click='makeAdmin(user._id)')
                                            i.fa.fa-users
                                            |  Make admin


