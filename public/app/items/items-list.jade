.container
    .row
        .col-md-4
            form.navbar-form(role="search")
            .input-group
                input.form-control(type="text" placeholder="Search" name="q" ng-model="query")
                .input-group-btn
                    button.btn.btn-default(ng-click="findItem(query)")
                        i.glyphicon.glyphicon-search
                        
        .col-md-4
            form.navbar-form(role="search")
                
                select.form-control(ng-model="sort")
                    option(value=" " ng-selected="'true'") Order by
                    option(value="title") Title
                    option(value="published") Published
        
    br
    table.table
        tr
            th Title
            th Published
        tr(ng-repeat="item in items | orderBy: sort")
            td
                a(href="#/items/{{ item._id }}") {{ item.title }}
            td {{ item.published | date }}