.container-fluid()
    .row
        .col-md-3
            div(ng-include="'partials/admin/admin-panel-navigation'")
        .col-md-9
            table.table
                h3 Users
                hr
                .row
                    tr(ng-repeat="user in users")
                        td {{ user.firstName }}
                        td {{ user.lastName }}
                        td
                            .btn-group
                                a.btn.btn-primary(href="#/users/{{user._id}}")
                                    i.fa.fa-user.fa-fw
                                    | User
                                    a.btn.btn-primary(dropdown-toggle data-toggle="dropdown")
                                        span.fa.fa-caret-down
                                ul.dropdown-menu
                                    li
                                        a(href="#/users/{user._id}/edit")
                                            i.fa.fa-pencil.fa-fw
                                            |  Edit
                                    li
                                        a(ng-click='delete(user)')
                                            i.fa.fa-trash-o.fa-fw
                                            |  Delete
                                    li
                                        a(ng-click='ban(user)')
                                            i.fa.fa-ban.fa-fw
                                            |  Ban
                                    li.divider
                                    li
                                        a(ng-click='makeAdmin(user)')
                                            i.i
                                            |  Make admin