.container 
   .row
        .col-md-4
            a.btn.btn-default.pull-right(href="#/items/{{ currentItemId }}/edit") Edit
            h2 {{item.title}}
            .thumbnail
                  img(src="images/{{ item.imageUrl }}", alt="{{ item.title }}")
            p {{item.description}}
        .col-md-4.pull-right.well
            h3 {{item.price}}$
    .row
        .col-md-4.pull-right.well
            p 
                strong Published on: 
                | {{item.published | date: 'MMM dd, yyyy'}} 
    .row
        .col-md-4.pull-right.well
            div
                strong User: 
                | {{item.owner.firstName + ' ' + item.owner.lastName}}
            br
            div
                strong City: 
                | {{item.owner.city}}
                
            br   
            div
                strong Contact: 
                | {{item.owner.phone}}
            br   
            div
                button.btn.btn-info Send message